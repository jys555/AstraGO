// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PASSENGER
  DRIVER
}

enum TripStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  EXPIRED
  CANCELLED
}

enum ChatStatus {
  ACTIVE
  ARCHIVED
  READ_ONLY
}

enum PickupType {
  STATION_ONLY
  HOME_PICKUP
}

enum DeliveryType {
  PASSENGER_ONLY
  CARGO_ACCEPTED
}

model User {
  id            String    @id @default(uuid())
  telegramId   String    @unique
  username     String?
  firstName    String?
  lastName     String?
  phone        String?
  role         UserRole  @default(PASSENGER)
  carNumber    String?
  carModel     String?
  carColor      String?
  onlineStatus Boolean   @default(false)
  lastSeen     DateTime  @default(now())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Onboarding & Retention
  onboardingCompletedAt     DateTime?
  pinNudgeCooldownUntil      DateTime?
  notifOptIn                 Boolean   @default(false)
  notifCooldownUntil         DateTime?
  weeklyDigestOptIn          Boolean   @default(false)
  lastAppOpenAt              DateTime?
  lastNotificationSentAt     DateTime?
  notificationsSentToday     Int       @default(0)
  notificationsSentDate      DateTime? // Date when notificationsSentToday was last reset

  // Relations
  tripsAsDriver     Trip[]
  reservations      Reservation[]
  chatsAsPassenger  Chat[] @relation("PassengerChats")
  chatsAsDriver     Chat[] @relation("DriverChats")
  sentMessages      ChatMessage[] @relation("SentMessages")
  driverMetrics     DriverMetrics?
  reviewsAsPassenger TripReview[] @relation("PassengerReviews")
  reviewsAsDriver    TripReview[] @relation("DriverReviews")
  notificationLogs   NotificationLog[]

  @@index([telegramId])
  @@index([onlineStatus])
  @@index([role])
}

model Trip {
  id                    String        @id @default(uuid())
  driverId              String
  routeFrom             String
  routeTo               String
  departureWindowStart  DateTime
  departureWindowEnd    DateTime
  durationHours         Float?        // Trip duration in hours (calculated from start + duration)
  vehicleType           String
  totalSeats            Int
  availableSeats        Int
  pickupType            PickupType    @default(STATION_ONLY)
  deliveryType          DeliveryType  @default(PASSENGER_ONLY)
  status                TripStatus    @default(ACTIVE)
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  // Relations
  driver                User          @relation(fields: [driverId], references: [id], onDelete: Cascade)
  reservations          Reservation[]
  seatAvailability      SeatAvailability?
  chats                 Chat[]
  reviews               TripReview[]

  @@index([driverId])
  @@index([routeFrom, routeTo])
  @@index([departureWindowStart, departureWindowEnd])
  @@index([status])
  @@index([availableSeats])
}

model Reservation {
  id          String            @id @default(uuid())
  tripId      String
  passengerId String
  seatCount   Int               @default(1)
  reservedAt  DateTime          @default(now())
  expiresAt   DateTime
  status      ReservationStatus @default(PENDING)
  confirmedAt DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Relations
  trip        Trip              @relation(fields: [tripId], references: [id], onDelete: Cascade)
  passenger   User              @relation(fields: [passengerId], references: [id], onDelete: Cascade)
  chat        Chat?
  review      TripReview?

  @@index([tripId])
  @@index([passengerId])
  @@index([status])
  @@index([expiresAt])
  @@index([passengerId, status])
}

model SeatAvailability {
  id            String   @id @default(uuid())
  tripId        String   @unique
  reservedSeats Int      @default(0)
  availableSeats Int
  updatedAt     DateTime @updatedAt

  // Relations
  trip          Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@index([tripId])
}

model Chat {
  id            String     @id @default(uuid())
  reservationId String     @unique
  tripId        String
  driverId      String
  passengerId   String
  status        ChatStatus @default(ACTIVE)
  telegramLink  String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  archivedAt    DateTime?

  // Relations
  reservation   Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  trip          Trip        @relation(fields: [tripId], references: [id], onDelete: Cascade)
  driver        User       @relation("DriverChats", fields: [driverId], references: [id], onDelete: Cascade)
  passenger     User       @relation("PassengerChats", fields: [passengerId], references: [id], onDelete: Cascade)
  messages      ChatMessage[]

  @@index([reservationId])
  @@index([tripId])
  @@index([driverId, passengerId])
  @@index([status])
}

model ChatMessage {
  id        String   @id @default(uuid())
  chatId    String
  senderId  String
  content   String
  createdAt DateTime @default(now())
  readAt    DateTime?

  // Relations
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender    User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([senderId])
  @@index([createdAt])
}

model DriverMetrics {
  id                        String   @id @default(uuid())
  driverId                  String   @unique
  avgResponseTime           Float?   // in seconds
  responseRate              Float    @default(0) // percentage (0-100)
  totalTrips                Int      @default(0)
  totalReservations         Int      @default(0)
  confirmedReservations     Int      @default(0)
  cancelledTrips            Int      @default(0) // total cancelled trips
  cancelledTripsWithPassengers Int  @default(0) // cancelled trips that had passengers
  reliabilityScore          Float    @default(100) // 0-100, based on cancellation rate
  avgRating                 Float?   // average rating from reviews (1-5)
  totalReviews              Int      @default(0) // total number of reviews
  rankingScore              Float    @default(0) // calculated score for sorting
  lastUpdated               DateTime @updatedAt

  // Relations
  driver                    User     @relation(fields: [driverId], references: [id], onDelete: Cascade)

  @@index([driverId])
  @@index([rankingScore])
  @@index([avgResponseTime])
  @@index([reliabilityScore])
}

enum ReviewReason {
  // Positive reasons (4-5 stars)
  FRIENDLY_DRIVER
  EXCELLENT_VEHICLE
  FAST_DELIVERY
  GOOD_SERVICE
  CLEAN_VEHICLE
  ON_TIME
  // Negative reasons (1-3 stars)
  RUDE_BEHAVIOR
  POOR_VEHICLE
  LATE_DELIVERY
  UNSAFE_DRIVING
  POOR_COMMUNICATION
  LATE_DEPARTURE
  VEHICLE_ISSUES
  OTHER
}

model TripReview {
  id            String       @id @default(uuid())
  tripId        String
  reservationId String       @unique
  passengerId   String
  driverId      String
  rating        Int          // 1-5 stars
  reason        ReviewReason?
  comment       String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  trip          Trip         @relation(fields: [tripId], references: [id], onDelete: Cascade)
  reservation   Reservation  @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  passenger     User         @relation("PassengerReviews", fields: [passengerId], references: [id], onDelete: Cascade)
  driver        User         @relation("DriverReviews", fields: [driverId], references: [id], onDelete: Cascade)

  @@index([tripId])
  @@index([reservationId])
  @@index([passengerId])
  @@index([driverId])
  @@index([rating])
}

enum NotificationType {
  DRIVER_REPLIED
  RESERVATION_EXPIRING_2MIN
  TRIP_CONFIRMED
  TRIP_CANCELLED
  TRIP_WINDOW_1H
  TRIP_WINDOW_15MIN
  WEEKLY_TOP_TRIPS
}

model NotificationLog {
  id                  String           @id @default(uuid())
  telegramUserId      String
  type                NotificationType
  relatedTripId       String?
  relatedReservationId String?
  sentAt              DateTime         @default(now())

  // Relations
  user                User             @relation(fields: [telegramUserId], references: [telegramId], onDelete: Cascade)

  @@index([telegramUserId])
  @@index([sentAt])
  @@index([type])
}

model FeatureFlag {
  key     String  @id
  enabled Boolean  @default(false)
  updatedAt DateTime @updatedAt
}
